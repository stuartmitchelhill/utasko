<% include partials/header %>
	    
	    <div class="content-main">
			<div class="top-bar">
				<div class="project-bar">
					<a href="#edit_profile" class="fancybox">
						<h3>Edit Profile</h3>
						<i class="ut-pencil"></i>
					</a>
				</div>
			</div>

		    <div class="container">
                <div class="col-1-1">
                    <div class="wrapper padded">
                      <h1 class="profile-title">My Profile</h1>  
                        <div class="col-1-1">
                            <div class="profile-image">
                                <img src="<%= profile_image %>">
                            </div>
                            <div class="profile-info">
                                <ul>
                                    <li><h4>Username:</h4> <span><%= username %></span></li>
                                    <li><h4>Email:</h4> <span><%= email %></span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                 </div>
			</div>
            
            <div id="edit_profile" class="fancybox-popup">
            <div class="popup-close">
                <a href="javascript:void(0)"><i class="ut-close"></i></a>
            </div>
            <div class="popup-header">
                <h3>Edit Profile</h3>
            </div>
            <div class="popup-body">
                <div class="form popup-form">
					<div class="form-inner">
                        <form id="my-dropzone" method="post" action="/upload_profile_image" class="dropzone">
                            <label>Profile Image</label>
                            <img src="<%= profile_image %>" />
                        </form>
						<form action="/edit_profile" method="post" id="edit-profile-form">
                            <input type="text" name="user[name]" id="profile-username" value="<%= username %>" />
                            <span class="error">Please enter a username</span>
							<input type="text" name="user[email]" id="project-end-date" value="<%= email %>" />
                            <span class="error">Please enter a valid email address</span>
                            <input type="password" name="user[password]" id="profile-password" value="<%= password %>" />
                            <span class="error">Please enter a password</span>
                            <input type="submit" name="submit" class="submit-btn" value="Save Changes" />
                        </form>
					</div>
				</div>
            </div>
            
            <div id="edit_project_project_id" class="fancybox-popup">
            <div class="popup-close">
                <a href="javascript:void(0)"><i class="ut-close"></i></a>
            </div>
            <div class="popup-header">
                <h3>Edit Project</h3>
                <p class="subtitle">Subtitle</p>
            </div>
            <div class="popup-body">
                <div class="form popup-form">
					<div class="form-inner">
						<form action="/edit_project" method="post" id="edit-project-form">
							<input type="text" name="project[title]" id="project-title" value="Project Title" />
                            <span class="error">Please enter a title for your project</span>
							<input type="text" name="project[end_date]" id="project-end-date" value="Project End Date" />
                            <span class="error">Please enter an end date for your project</span>
                            <input type="text" name="project[repository]" id="preoject-repo" placeholder="Project Repository" />
                            <span class="error">Please enter a repository for you project</span>
                            <div class="custom-select">
                                <select name="project[users]">
                                    <option disabled="disabled" selected="selected">Add Project Users</option>
                                    <option>User 1</option>
                                    <option>User 2</option>
                                    <option>User 3</option>
                                </select>
                            </div>
                            <div class="project-colour">
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#B8EE66" checked="checked">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#66AFEE">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#EE6666">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#FFA946">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#9566EE">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#50E3C2">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#FFF363">
                                </div>
                                <div class="custom-checkbox">
                                    <input type="radio" name="project[colour]" value="#F35252">
                                </div>
                            </div>
                            <textarea name="project[description]" id="project-description">Project Description</textarea>
                            <span class="error">Please enter a description for your project</span>
                            <input type="hidden" name="project[status]" value="active">
							<input type="submit" name="submit" class="submit-btn" value="Edit Project" />
						</form>
					</div>
				</div>
            </div>
        </div> 

		</div> <!-- Close Content Main -->

<% include partials/footer %>
<% include partials/header %>
	    
	    <div class="content-main">
			<div class="top-bar">
				<div class="profile-bar">
					<a href="#edit_profile" class="fancybox">
						<h3>Edit Profile</h3>
						<i class="ut-pencil"></i>
					</a>
				</div>
			</div>

		    <div class="container">
                <div class="col-1-1">
                    <div class="wrapper">
                      <h1 class="profile-title">My Profile</h1>  
                        <div class="col-1-1">
                            <div class="profile-image">
                                <img src="<%= profile_image %>">
                            </div>
                            <div class="profile-info">
                                <h4>Username</h4> 
                                <p><%= username %></p>
                                <h4>Email</h4> 
                                <p><%= email %></p>
                            </div>
                        </div>
                    </div>
                 </div>
			</div>
            
            <div id="edit_profile" class="fancybox-popup">
            <div class="popup-close">
                <a href="javascript:void(0)"><i class="ut-close"></i></a>
            </div>
            <div class="popup-header">
                <h3>Edit Profile</h3>
            </div>
            <div class="popup-body">
                <div class="form popup-form">
					<div class="form-inner">
                        <form id="my-dropzone" method="post" action="/upload_profile_image" class="dropzone">
                            <label>Profile Image</label>
                            <img src="<%= profile_image %>" />
                        </form>
						<form action="/edit_profile" method="post" id="edit-profile-form">
                            <input type="text" name="user[name]" id="profile-username" value="<%= username %>" required/>
							<input type="email" name="user[email]" id="project-end-date" value="<%= email %>" required/>
                            <input type="password" name="user[password]" pattern=".{6,}" id="profile-password" value="<%= password %>" required/>
                            <input type="submit" name="submit" class="submit-btn" value="Save Changes" />
                        </form>
					</div>
				</div>
            </div>
                <script src="/javascripts/dropzone.js"></script>
                <script>
                    Dropzone.autoDiscover = false;
                    var myDropzone = new Dropzone('#my-dropzone', {
                    });
                </script>

		</div> <!-- Close Content Main -->

<% include partials/footer %>
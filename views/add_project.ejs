<% include partials/header %>

	<div class="container">
		<div class="col col-1-1">
			<div class="wrapper no-scroll">
				<div class="add-project-form">
					<div class="add-project-form-inner">
						<h3>Add Project</h3>
						<form action="/add_project" method="post">
							<input type="text" name="project[title]" placeholder="Enter Project Title" />
							<input type="text" name="project[end_date]" placeholder="Project End Date" />
                            <input type="text" name="project[repository]" placeholder="Enter Project Repository" />
                            <div class="custom-select">
                                <select>
                                    <option disabled="disabled" selected="selected">Add Project Users</option>
                                    <option>User 1</option>
                                    <option>User 2</option>
                                    <option>User 3</option>
                                </select>
                            </div>
                            <textarea name="project[description]" placeholder="Enter Project Description"></textarea>
                            <input type="hidden" name="project[status]" value="active">
                            <input type="hidden" name="project[colour]" value="@utasko_green">
							<input type="submit" name="submit" class="submit-btn" value="Add Project" />
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

<% include partials/footer %>
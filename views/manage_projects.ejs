<% include partials/header %>
	    
	    <div class="content-main">
		    <div class="container no-padding">
                <div class="wrapper padded">
                  <h1 class="profile-title">My Projects</h1>  
                    <div class="col-1-1">
                        <% if (message == "updated") { %>
                        <div class="alert alert-success">
                            <span>Your project has been successfully updated</span>    
                        </div>
                        <% } %>
                        <% if (message == "deleted") { %>
                        <div class="alert alert-success">
                            <span>Your project has been successfully deleted</span>
                        </div>
                        <% } %>
                        <div class="list-projects active-project-list">
                            <h4>Active Projects</h4>
                            <ul>
                                <% for(var i=0; i<project_data.length; i++) { %>
                                <li><a href="/project?id=<%= project_data[i].project_id %>"><%= project_data[i].project_title %></a> <span><a href="#edit_project_<%= project_data[i].project_id %>" class="fancybox"><i class="ut-pencil"></i></a> <a href="/delete_project?project_id=<%= project_data[i].project_id %>"><i class="ut-trash"></i></a></span></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                 </div>
			</div>
            
            <% for(var i=0; i<project_data.length; i++) { %>
            <div id="edit_project_<%= project_data[i].project_id %>" class="fancybox-popup">
                <div class="popup-close">
                    <a href="javascript:void(0)"><i class="ut-close"></i></a>
                </div>
                <div class="popup-header">
                    <h3>Edit Project</h3>
                    <p class="subtitle"><%= project_data[i].project_title %></p>
                </div>
                <div class="popup-body">
                    <div class="form popup-form">
                        <div class="form-inner">
                            <form action="/edit_project" method="post" id="edit-project-form">
                                <input type="text" name="project[title]" id="project-title" value="<%= project_data[i].project_title %>" required/>
                                <input class="pickadate" type="text" name="project[end_date]" id="project-end-date" value="<%= project_data[i].end_date %>" required/>
                                <input type="text" name="project[repository]" id="preoject-repo" placeholder="Edit project repository" required/>
                                <div class="users">
                                    <div class="custom-select">
                                        <select name="project[users][]">
                                            <option disabled="disabled" selected="selected">Add Project Users</option>
                                            <% for(var j=0; j<project_users_data.length; j++) { %>
                                                <option value="<%= project_users_data[j].user_id %>"><%= project_users_data[j].name %> (<%= project_users_data[j].email %>)</option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-button add-user-btn">
                                    <a href="javascript:void(0)" class="btn add-user"><i class="ut-plus"></i> Add Another User</a>
                                </div>
                                <div class="project-colour">
                                    <label>Select a project colour</label>
                                    <ul class="radio-list">
                                        <li>
                                            <input type="radio" name="project[colour]" value="green" checked="checked">
                                            <div class="check green"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="blue">
                                            <div class="check blue"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="pink">
                                            <div class="check pink"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="orange">
                                            <div class="check orange"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="purple">
                                            <div class="check purple"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="turquoise">
                                            <div class="check turquoise"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="red">
                                            <div class="check red"></div>
                                        </li>
                                        <li>
                                            <input type="radio" name="project[colour]" value="yellow">
                                            <div class="check yellow"></div>
                                        </li>
                                    </ul>
                                </div>
                                <input type="hidden" name="project[status]" value="active">
                                <input type="hidden" name="project[id]" value="<%= project_data[i].project_id %>">
                                <input type="submit" name="submit" class="submit-btn" value="Edit Project" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

		</div> <!-- Close Content Main -->

<% include partials/footer %>